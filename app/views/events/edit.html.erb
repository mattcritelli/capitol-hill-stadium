<h1>Update event:</h1>

<%= form_for(@event) do |f| %>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.datetime_select :date_and_time, :ampm => true, :minute_step => 15 %><br>
  </p>
  <p>
    <%= f.label :capacity %><br>
    <%= f.number_field :capacity %>
  </p>
  <%= f.submit %>
<% end %>
